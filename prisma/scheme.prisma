datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Author {
    id      String      @map("auth_id")     @db.Uuid            @default(uuid())
    name    String      @map("auth_name")   @db.VarChar(54)
    age     Int?        @map("auth_age")    @db.Integer


    @@id([id])
    @@map("author")
}